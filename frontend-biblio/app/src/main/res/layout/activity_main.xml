<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des lecteurs"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="38dp" />

    <TextView
        android:id="@+id/sousTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestion bibliothecaire"
        android:textColor="#000"
        android:textSize="13sp"
        android:layout_marginLeft="38dp"
        android:layout_below="@id/titre"/>

    <ImageView
        android:onClick="addLecteur"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/add_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:clickable="true" />

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/th"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_below="@id/sousTitre">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/num"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="NÂ°"
                android:textSize="21sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nom"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Nom"
                android:textSize="21sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Actions"
                android:textSize="21sp"
                android:textColor="#000"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipedown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/th"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lecteur"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>

